{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",
        "noImplicitAny": true,
        "declaration": true,
        "watch": true,
        "outDir": "build",
        "declarationDir": "types",
        "esModuleInterop": true   
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}